{
  "name": "ewa-box-water",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:customer": "turbo run dev --filter=@ewa/customer",
    "dev:marketing": "turbo run dev --filter=@ewa/marketing",
    "dev:admin": "turbo run dev --filter=@ewa/admin",
    "build": "turbo run build",
    "build:customer": "turbo run build --filter=@ewa/customer",
    "build:marketing": "turbo run build --filter=@ewa/marketing",
    "build:admin": "turbo run build --filter=@ewa/admin",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "mock-api": "json-server --watch ./mock/db.json --port 4000 --routes ./mock/routes.json",
    "install:all": "npm install && npm run build --workspaces"
  },
  "devDependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@types/node": "^22.15.21",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "json-server": "^0.17.3",
    "prettier": "^3.0.0",
    "turbo": "^1.10.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "react-qr-code": "^2.0.15"
  }
}
